<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class = "col-md-8">
      <div class="card">
        <h5 class="card-header"><%= t "Activity Feed" %></h5>
        <div class="card-body">
          <%if @feed_items.exists?%>
            <% @feed_items.each do |item|%>
              <div class="card">
                <div class="card-body">
                  <div class="d-flex">
                    <% @user = item.user %>
                      <%if item.action.is_a?(Lesson)%>
                        <%= render "activities/lesson_activity", item: item %>
                      <%else%>
                        <%= render "activities/relationship_activity", item: item %>
                      <%end%>
                  </div>
                </div>
              </div>
            <% end %>
            <%= will_paginate @feed_items %>
          <%else%>
            <center><h5><%= t "No activity yet"%></h5></center>
          <%end%>
        </div>
      </div>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1><%= t ".welcome" %></h1>
  <h2>
    <%= t ".para1_html" %>
  </h2>
  <%= link_to t(".sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>
