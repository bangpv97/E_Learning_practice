<%if current_user? @user %>
    <%name = t "You" %>
<%else%>
    <%name = @user.name %>
<%end %>

<div class="p-2">
    <h5><%= link_to name, user_path(@user) %></h5><%= t "followed" %><%= link_to item.action.followed.name, item.action.followed, class: "badge badge-info"  %>
    <p><small><%= time_ago_in_words(item.created_at) %><%= t "ago" %></small></p>
</div>
